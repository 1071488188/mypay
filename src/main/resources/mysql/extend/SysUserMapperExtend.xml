<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.har.unmanned.mfront.dao.extend.SysUserMapperExtend">
    <resultMap id="BaseResultMap" type="com.har.unmanned.mfront.model.extend.SysUserExtend">
        <id column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="salt" property="salt" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_user_id" property="createUserId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- 查询用户是否拥有某角色-->
    <select id="getuserRole" resultType="java.lang.Integer" parameterType="map">
        SELECT COUNT(*) FROM sys_user sr,shop sp,sys_user_role so
        WHERE sr.user_id=sp.user_id and sr.user_id=so.user_id and so.role_id=#{roleId}
        <if test="userId!='' and userId!=null">
            and sr.user_id=#{userId}
        </if>
        <if test="mobile!='' and mobile!=null">
            and sr.mobile=#{mobile}
        </if>
    </select>

    <select id="queryUserRole" resultType="java.lang.Integer" parameterType="map">
        SELECT
            COUNT(sr.user_id)
        FROM
            sys_user sr LEFT JOIN sys_user_role so ON so.user_id = sr.user_id
        WHERE
          sr.user_id=#{userId}
          and so.role_id=#{roleId}
    </select>
    <!--根据用户id查询用户权限并返回权限类型-->
    <select id="getUserAndRole" resultMap="BaseResultMap" parameterMap="map">
        SELECT sr.role_id as roleType,sr.user_id  FROM sys_user sr,sys_user_role so
        WHERE sr.user_id = so.user_id AND so.role_id IN (3, 4)
        <if test="status!=null">
            and sr.status=#{status}
        </if>
        <if test="mobile!=null and mobile!=''">
            and sr.mobile=#{mobile}
        </if>
        <if test="userId!='' and userId!=null">
            and sr.user_id=#{userId}
        </if>
        ORDER BY sr.user_id DESC LIMIT 1
    </select>
    <!--查询某角色是否已经被绑定-->
    <select id="distributionIsBinding" resultType="java.lang.Integer" parameterMap="map">
      SELECT COUNT (*) from sys_user sr,shop_wechat sw,sys_role sys_user_role sur
      where su.user_id=sw.user_id and sw.user_id=sur.user_id and sur.role_id=#{roleId}
        <if test="status!=null">
            and sr.status=#{status}
        </if>
        <if test="mobile!=null and mobile!=''">
            and sr.mobile=#{mobile}
        </if>
        <if test="userId!='' and userId!=null">
            and sr.user_id=#{userId}
        </if>
    </select>
</mapper>