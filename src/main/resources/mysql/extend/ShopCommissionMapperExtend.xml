<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.har.unmanned.mfront.dao.extend.ShopCommissionMapperExtend" >
  <resultMap id="BaseResultMap" type="com.har.unmanned.mfront.model.extend.ShopCommissionExtend" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="shop_id" property="shopId" jdbcType="BIGINT" />
    <result column="commission_no" property="commissionNo" jdbcType="VARCHAR" />
    <result column="start_time" property="startTime" jdbcType="TIMESTAMP" />
    <result column="end_time" property="endTime" jdbcType="TIMESTAMP" />
    <result column="order_num" property="orderNum" jdbcType="INTEGER" />
    <result column="amount" property="amount" jdbcType="INTEGER" />
    <result column="ratio" property="ratio" jdbcType="DECIMAL" />
    <result column="commission" property="commission" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="apply_time" property="applyTime" jdbcType="TIMESTAMP" />
    <!--扩展字段-->
    <result column="time" property="time" jdbcType="VARCHAR" />
  </resultMap>
  <!--查询网点佣金记录清单-->
  <select id="selectListByShopId" resultMap="BaseResultMap" parameterType="map">
    SELECT
    id,FORMAT(start_time,'YYYY-MM-DD') as time,amount/100 as amount,commission/100 as commission,ratio,status
    from shop_commission where shop_id=#{shopId}
  </select>
  <!--查询该用户是否有当前结算清单-->
  <select id="countByUserIdAndId" resultType="java.lang.Integer" parameterType="map">
    SELECT count(*) from shop_commission sc,shop s
    WHERE sc.shop_id=s.shop_id  and sc.id=#{id} and s.user_id=#{userId}
  </select>
</mapper>